{
    "name": "pyright",
    "displayName": "Pyright",
    "description": "VS Code static type checking for Python",
    "version": "1.0.22",
    "license": "MIT",
    "author": {
        "name": "Microsoft Corporation"
    },
    "publisher": "ms-pyright",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/pyright"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "keywords": [
        "python"
    ],
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:**/pyrightconfig.json"
    ],
    "icon": "images/pyright-icon.png",
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "python",
                "aliases": [
                    "Python"
                ],
                "extensions": [
                    ".py",
                    ".pyi"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Python Configuration",
            "properties": {
                "python.analysis.typeshedPaths": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "Paths to look for typeshed modules.",
                    "scope": "resource"
                },
                "python.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Path to Python, you can use a custom version of Python.",
                    "scope": "resource"
                },
                "python.venvPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to folder with a list of Virtual Environments.",
                    "scope": "resource"
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "pyrightconfig.json",
                "url": "./schemas/pyrightconfig.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run build",
        "build": "tsc -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^3.4.4",
        "vsce": "^1.59.0",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "vscode-languageclient": "^5.3.0-next.4"
    }
}
